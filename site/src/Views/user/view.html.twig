{% extends "layouts/layout.html.twig" %}

{% set title = 'Mon compte' %}

{% block content %}
    <h2 class="pd-10">Mon compte</h2>
    <hr class="clear-r">

    <div class="grid">
        <div class="column-6">
            <h2 class="center">Mes informations</h2>
            <hr class="clear-r">
            <p><strong>Pr&eacute;nom:</strong> {{ auth.first_name }}</p>
            <p><strong>Nom:</strong> {{ auth.last_name }}</p>
            <p><strong>Email:</strong> {{ auth.mail }}</p>
        </div>

        <div class="column-6">
            <table class="bordered centered">
                <thead>
                <tr>
                    <th colspan="2" class="center">
                        Mes listes
                    </th>
                </tr>
                </thead>
                <tbody>
                    {% for list in auth.getLists %}
                        <tr>
                            <td>
                                {{ list.name }}
                            </td>
                            <td>
                                {{ list.dateExp|date('d-m-y') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}