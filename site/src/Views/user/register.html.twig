{% extends "layouts/layout.html.twig" %}

{% set title = 'Inscription' %}

{% block content %}

    <h2 class="pd-10">Inscription</h2>
    <hr class="clear-r">

    <form action="{{ path_for('user.register') }}" method="post">
        {{ csrf() }}

        <label for="last_name">Nom</label>
        <input type="text" name="last_name" id="last_name" value="{{ persistValues.last_name }}" class="{% if flash.errors.last_name %}has-error{% endif %}" required>
        {% if flash.errors.last_name %}
            <span class="error">{{ flash.errors.last_name }}</span>
        {% endif %}

        <label for="first_name">Pr&eacute;nom</label>
        <input type="text" name="first_name" id="first_name" value="{{ persistValues.first_name }}" class="{% if flash.errors.first_name %}has-error{% endif %}" required>
        {% if flash.errors.first_name %}
            <span class="error">{{ flash.errors.first_name }}</span>
        {% endif %}

        <label for="email">Adresse email</label>
        <input type="email" name="email" id="email" value="{{ persistValues.email }}" class="{% if flash.errors.email %}has-error{% endif %}" required>
        {% if flash.errors.email %}
            <span class="error">{{ flash.errors.email }}</span>
        {% endif %}

        <label for="password">Mot de passe</label>
        <input type="password" name="password" id="password" class="{% if flash.errors.password %}has-error{% endif %}" required>
        {% if flash.errors.password %}
            <span class="error">{{ flash.errors.password }}</span>
        {% endif %}

        <label for="password_repeat">Mot de passe (v√©rification)</label>
        <input type="password" name="password_repeat" id="password_repeat" class="{% if flash.errors.password_repeat %}has-error{% endif %}" required>
        {% if flash.errors.password_repeat %}
            <span class="error">{{ flash.errors.password_repeat }}</span>
        {% endif %}

        <button type="submit" class="btn btn-info btn-el btn-fancy">Inscription</button>
    </form>

{% endblock %}