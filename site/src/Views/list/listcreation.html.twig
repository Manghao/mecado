{% extends "layouts/layout.html.twig" %}

{% set title = 'Creation de liste' %}

{% block content %}
  <form action="{{ path_for('list.creationlist') }}" method="post">
      {{ csrf() }}

    <label for="list_title">Titre de la liste</label>
    <input class="{% if flash.errors.list_title %}has-error{% endif %}" type="text" name="list_title" id="list_title" value="{{ persistValues.list_title }}" required>
      {% if flash.errors.list_title %}
        <span class="error">{{ flash.errors.list_title }}</span>
      {% endif %}

    <label for="description">Description</label>
    <input class="{% if flash.errors.description %}has-error{% endif %}" type="text" name="description" id="description" value="{{ persistValues.description }}" required>
      {% if flash.errors.description %}
        <span class="error">{{ flash.errors.description }}</span>
      {% endif %}

    <label for="datepicker">Date de fin</label>
    <input class="{% if flash.errors.end_date %}has-error{% endif %}" type="text" name="end_date" id="datepicker" value="{{ persistValues.end_date }}" required>
      {% if flash.errors.end_date %}
        <span class="error">{{ flash.errors.end_date }}</span>
      {% endif %}

    <input class="{% if flash.errors.other_dest %}has-error{% endif %}" type="checkbox" name="other_dest" id="other_dest" value="{{ persistValues.other_dest }}">
    <label for="other_dest">
      Liste pour une autre personne que moi
      <i class="material-icons" title="Cochez cette case si la liste que vous créer ne vous est pas déstinée, ainsi vous aurez accès en direct aux messages postés par les participants">help_outline</i>
    </label>
      {% if flash.errors.other_dest %}
        <span class="error">{{ flash.errors.other_dest }}</span>
      {% endif %}

    <div id="div_name_dest">
      <label for="name_dest">Nom du destinataire</label>
      <input class="{% if flash.errors.name_dest %}has-error{% endif %}" type="text" name="name_dest" id="name_dest" value="{{ persistValues.name_dest }}">
        {% if flash.errors.name_dest %}
          <span class="error">{{ flash.errors.name_dest }}</span>
        {% endif %}
    </div>

    <button class="btn btn-info">Créer la liste</button>
  </form>
{% endblock %}

{% block js %}
  <script src="{{ base_url() ~ '/assets/js/otherDest.js' }}"></script>
{% endblock %}