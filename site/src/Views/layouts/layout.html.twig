<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> {{ picker('app.name') }} {% if title is defined %} - {{ title }}{% endif %}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimal-ui" />
    <link rel="stylesheet" href="{{ base_url() ~ '/assets/css/bootstrap.min.css' }}">
    <link rel="stylesheet" href="{{ base_url() ~ '/assets/css/framework.css' }}">
    <link rel="stylesheet" href="{{ base_url() ~ '/assets/css/app.css' }}">
    <link rel="stylesheet" href="{{ base_url() ~ '/assets/css/materialicons.css' }}">
</head>
<body>
    {% block navbar %}
        {% include 'app/navbar.html.twig' %}
    {% endblock %}

    {% if title == 'Accueil' %}
        <div class="headband">
            <img src="{{ base_url() ~ '/assets/img/gift.png' }}">
        </div>
    {% endif %}

    <div class="contains">
        {% if flash.success %}
            <div class="alert alert-success">{{ flash.success }}</div>
        {% endif %}

        {% if flash.error %}
            <div class="alert alert-danger">{{ flash.error }}</div>
        {% endif %}

        {% if flash.info %}
            <div class="alert alert-info">{{ flash.info }}</div>
        {% endif %}

        {% block content %}{% endblock %}
    </div>
</body>
</html>
